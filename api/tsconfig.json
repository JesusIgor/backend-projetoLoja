{
  "compilerOptions": {
    "target": "ES2020",                           // Define o padrão de JavaScript para o qual o TypeScript será compilado
    "module": "commonjs",                         // Usa o formato de módulo CommonJS (necessário para Node.js)
    "lib": ["ES2020"],                            // Especifica as bibliotecas de tipos para o código gerado
    "esModuleInterop": true,                      // Habilita a importação de módulos CommonJS de maneira mais fácil
    "skipLibCheck": true,                         // Ignora a checagem de tipos em arquivos de definição de bibliotecas
    "strict": true,                               // Habilita todas as checagens rigorosas de tipos
    "forceConsistentCasingInFileNames": true,     // Garante consistência no nome dos arquivos importados
    "outDir": "./dist",                           // Define o diretório de saída para o código compilado
    "rootDir": "./src",                           // Define o diretório raiz para os arquivos de código-fonte
    "resolveJsonModule": true,                    // Permite importar arquivos JSON como módulos
    "isolatedModules": true                       // Garante que cada arquivo seja tratado como um módulo isolado
  },
  "include": [
    "src/**/*.ts"                                 // Inclui todos os arquivos TypeScript dentro da pasta 'src'
  ],
  "exclude": [
    "node_modules"                                // Exclui a pasta node_modules da compilação
  ]
}
